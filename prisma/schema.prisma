// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model BankAccount {
  id       String @id @default(cuid())
  name     String
  owner    Person @relation(fields: [personId], references: [id])
  balance  Float
  personId String

  outgoingTransactions Transaction[] @relation(name: "FromAccount")
  incomingTransactions Transaction[] @relation(name: "ToAccount")
}

model TransactionType {
  id          String        @id @default(cuid())
  name        String
  Transaction Transaction[]
}

model Transaction {
  id                String          @id @default(cuid())
  name              String
  transactionTypeId String
  type              TransactionType @relation(fields: [transactionTypeId], references: [id])
  amount            Float
  time              DateTime
  fromBankAccountId String
  toBankAccountId   String?
  fromAccount       BankAccount     @relation(name: "FromAccount", fields: [fromBankAccountId], references: [id])
  toAccount         BankAccount?    @relation(name: "ToAccount", fields: [toBankAccountId], references: [id])
  budgets           Budget[]
  notes             String
}

model Person {
  id          String        @id @default(cuid())
  firstName   String
  lastName    String
  eMail       String
  BankAccount BankAccount[]
}

model Budget {
  id               String @id @default(cuid())
  name             String
  monthlyAllowance Float

  Transactions Transaction[]
}
