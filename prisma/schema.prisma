generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Transaction {
  id            String      @id @default(cuid())
  time          DateTime
  from          BankAccount @relation(fields: [bankAccountId], references: [id])
  bankAccountId String
}

model BankAccount {
  id           String        @id @default(cuid())
  name         String
  owner        Person        @relation(fields: [personId], references: [id])
  currentValue Int
  Transaction  Transaction[]
  personId     String
}

model Person {
  id          String        @id @default(cuid())
  firstName   String
  lastName    String
  eMail       String
  BankAccount BankAccount[]
}
